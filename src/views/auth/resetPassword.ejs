<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap.rtl.css">
  <link rel="stylesheet" href="/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <title>قالب فروشگاهی نیک کالا | تغییر رمز عبور </title>
</head>

<body>

  <div class="container">
    <div class="row">
      <div class="col-10 col-md-7 col-lg-5 signup-login-box">
        <!-- start signup & login box -->
        <img src="/images/logo.png">
        <form action="/auth/reset-password" method="post">

          <div class="input-group signup-login-form password">
            <!-- start password input -->
            <input type="password" class="form-control form-control-lg signup-login-input" name="password" placeholder="رمز عبور جدید">
          </div><!-- end password input -->

          <div class="input-group signup-login-form repeat-password">
            <!-- start password input -->
            <input type="password" class="form-control form-control-lg signup-login-input" name="confirmPassword" placeholder="تکرار رمز عبور ">
          </div><!-- end password input -->

          <button type="submit" class="btn btn-danger d-block font-12 mx-auto mb-4 remember-btn">
            <!-- remember btn -->
            ذخیره
          </button>

        </form>
      </div><!-- end signup & login box -->
    </div>
  </div>

  <script src="/js/sweetAlert.js"></script>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script>
    if ("<%= locals.messages.success %>") {
      swal({
        title: "<%= locals.messages.success %>",
        icon: "success",
        buttons: "تائید",
      })
    } else if ("<%= locals.messages.error %>") {
      swal({
        title: "<%= locals.messages.error %>",
        icon: "error",
        buttons: "تلاش مجدد",
      })
    }
  </script>
  <script>
    const url = new URL(location.href);
    const pathname = window.location.pathname;
    const token = pathname.slice(pathname.indexOf("rd/") + 3);
    const form = document.querySelector("form");

    form.insertAdjacentHTML(
      "afterbegin",
      `<input type="hidden" name="token" value="${token}" />`
    );
  </script>
</body>

</html>